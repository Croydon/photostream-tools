<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hochschuledarmstadt.photostream_tools.examples">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".photo.PhotoActivity"
            android:label="@string/photo_example" />

        <activity android:name=".plugin.ContextualActionBarPluginActivity"
            android:label="@string/cab_plugin_activity_title"/>

        <activity android:name=".plugin.AlertDialogPluginActivity"
            android:label="@string/cab_dialog_activity_title"/>

        <activity
            android:name=".comment.CommentActivity"
            android:label="@string/comment_example" />

        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="PHOTOSTREAM_URL"
            android:value="http://5.45.97.155:8082" />

        <activity android:name=".upload.PhotoUploadActivity" />

        <activity android:name=".search.SearchActivity" />

        <activity
            android:name=".viewpager.ViewPagerActivity"
            android:label="@string/title_activity_view_pager"
            android:theme="@style/AppTheme.NoActionBar.ViewPager"/>

        <activity android:name=".notification.NotificationActivity"/>

        <activity android:name=".photo.FullscreenActivity" android:theme="@style/AppTheme.NoActionBar.Fullscreen"/>

        <receiver android:name=".notification.NotificationBroadcastReceiver">
            <intent-filter>
                <action android:name="hochschuledarmstadt.photostream_tools.intent.NEW_PHOTO"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>